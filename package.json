{
  "name": "lang-feel",
  "version": "2.2.0",
  "description": "FEEL language support for the CodeMirror code editor",
  "scripts": {
    "all": "run-s lint build test",
    "test": "karma start karma.conf.cjs",
    "start": "SINGLE_START=1 npm run dev",
    "dev": "run-p 'build -- watch' 'test -- --no-single-run --auto-watch'",
    "lint": "eslint . --ext ts",
    "build": "microbundle -f modern,cjs --target node",
    "prepare": "npm run build"
  },
  "keywords": [
    "editor",
    "code"
  ],
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "license": "MIT",
  "dependencies": {
    "@codemirror/autocomplete": "^6.16.2",
    "@codemirror/language": "^6.10.2",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.28.1",
    "@lezer/common": "^1.2.1",
    "lezer-feel": "^1.7.0"
  },
  "devDependencies": {
    "@lezer/lr": "^1.4.2",
    "@types/karma-chai": "^0.1.7",
    "@types/karma-mocha": "^1.3.4",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "chai": "^4.5.0",
    "codemirror": "^6.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-bpmn-io": "^1.0.0",
    "karma": "^6.4.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-debug-launcher": "^0.0.5",
    "karma-env-preprocessor": "^0.1.1",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.1",
    "microbundle": "^0.15.1",
    "mocha": "^10.8.2",
    "npm-run-all2": "^7.0.0",
    "puppeteer": "^23.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.97.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nikku/lang-feel.git"
  },
  "engines": {
    "node": "*"
  },
  "files": [
    "dist"
  ]
}
